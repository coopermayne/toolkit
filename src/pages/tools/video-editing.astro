    }

    // Generate timeline tick marks
    function generateTimelineTicks(duration) {
      timelineTickMarks.innerHTML = '';

      // Determine tick interval based on video duration
      let majorInterval, minorInterval;
      if (duration <= 30) {
        majorInterval = 5;  // 5 second marks
        minorInterval = 1;  // 1 second marks
      } else if (duration <= 120) {
        majorInterval = 10; // 10 second marks
        minorInterval = 5;  // 5 second marks
      } else if (duration <= 600) {
        majorInterval = 30; // 30 second marks
        minorInterval = 10; // 10 second marks
      } else {
        majorInterval = 60; // 1 minute marks
        minorInterval = 30; // 30 second marks
      }

      // Create tick marks
      for (let time = 0; time <= duration; time += minorInterval) {
        const position = (time / duration) * 100;
        const isMajor = time % majorInterval === 0;

        const tick = document.createElement('div');
        tick.className = 'absolute';
        tick.style.left = `${position}%`;
        tick.style.bottom = '0';
        tick.style.width = '1px';
        tick.style.height = isMajor ? '16px' : '8px';
        tick.style.backgroundColor = isMajor ? '#6b7280' : '#d1d5db';

        timelineTickMarks.appendChild(tick);
      }
    }

    // Format file size
    function formatFileSize(bytes) {
      if (bytes === 0) return '0 Bytes';
      const k = 1024;
      const sizes = ['Bytes', 'KB', 'MB', 'GB'];
      const i = Math.floor(Math.log(bytes) / Math.log(k));
      return Math.round((bytes / Math.pow(k, i)) * 100) / 100 + ' ' + sizes[i];
    }

    // Calculate GCD for aspect ratio
    function gcd(a, b) {
      return b === 0 ? a : gcd(b, a % b);
    }

    // Calculate aspect ratio
    function calculateAspectRatio(width, height) {
      const divisor = gcd(width, height);
      return `${width / divisor}:${height / divisor}`;
    }

