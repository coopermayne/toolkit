    videoInput.addEventListener('change', (e) => {
      if (e.target.files.length > 0) {
        handleVideoUpload(e.target.files[0]);
      }
    });

    // Handle video upload
    function handleVideoUpload(file) {
      videoFile = file;
      const url = URL.createObjectURL(file);

      videoPlayer.src = url;

      // Show video player, hide drop zone
      dropZone.classList.add('hidden');
      videoPlayerContainer.classList.remove('hidden');
      clipControlPanel.classList.remove('hidden');
      toolPanels.classList.remove('hidden');
      noVideoPlaceholder.classList.add('hidden');
      resetBtn.classList.remove('hidden');

      // Load video metadata
      videoPlayer.addEventListener('loadedmetadata', async () => {
        videoDurationSeconds = videoPlayer.duration;

        // Set slider max values
        startTimeSlider.max = videoDurationSeconds;
        endTimeSlider.max = videoDurationSeconds;
        endTimeSlider.value = videoDurationSeconds;

        // Generate timeline tick marks
        generateTimelineTicks(videoDurationSeconds);

        updateClipDisplay();

        // Detect FPS
        infoFrameRate.textContent = 'Detecting...';
        try {
          detectedFPS = await detectVideoFPS(videoPlayer);
          isFPSDetected = true;
          updateFPSDependentUI();
        } catch (error) {
          console.warn('FPS detection failed, using default 30 fps:', error);
          detectedFPS = 30;
          isFPSDetected = false;
          updateFPSDependentUI();
        }
      });

      // Constrain playback to clip range
      videoPlayer.addEventListener('timeupdate', () => {
        const startTime = parseFloat(startTimeSlider.value);
        const endTime = parseFloat(endTimeSlider.value);
        if (videoPlayer.currentTime > endTime) {
          videoPlayer.pause();
          videoPlayer.currentTime = startTime;
        }
      });

      // When play is clicked, ensure we're within the clip range
      videoPlayer.addEventListener('play', () => {
        const startTime = parseFloat(startTimeSlider.value);
        const endTime = parseFloat(endTimeSlider.value);
        if (videoPlayer.currentTime < startTime || videoPlayer.currentTime > endTime) {
          videoPlayer.currentTime = startTime;
        }
      });
    }

    // Reset button
    resetBtn.addEventListener('click', () => {
      videoPlayer.src = '';
      videoFile = null;
      videoInput.value = '';

      dropZone.classList.remove('hidden');
      videoPlayerContainer.classList.add('hidden');
      clipControlPanel.classList.add('hidden');
      toolPanels.classList.add('hidden');
      noVideoPlaceholder.classList.remove('hidden');
      resetBtn.classList.add('hidden');
    });

    // Update button states based on video playing state
    function updatePlayPauseButtons() {
      if (videoPlayer.paused) {
        // Show play icon with green color
        playIcon.classList.remove('hidden');
        pauseIcon.classList.add('hidden');
        playClipBtnText.textContent = 'Play';
        // Change to green for play
        playClipBtn.classList.remove('bg-primary-600', 'hover:bg-primary-700');
        playClipBtn.classList.add('bg-green-600', 'hover:bg-green-700');
        // Keep restart button visible if clip has been played before
        if (!clipHasBeenPlayed) {
          restartClipBtn.classList.add('hidden');
        }
      } else {
        // Show pause icon with primary color
        playIcon.classList.add('hidden');
        pauseIcon.classList.remove('hidden');
        playClipBtnText.textContent = 'Pause';
        // Change to primary for pause
        playClipBtn.classList.remove('bg-green-600', 'hover:bg-green-700');
        playClipBtn.classList.add('bg-primary-600', 'hover:bg-primary-700');
        restartClipBtn.classList.remove('hidden');
        clipHasBeenPlayed = true;
      }
    }

    // Play/Pause Clip button
    playClipBtn.addEventListener('click', () => {
      if (videoPlayer.paused) {
        const startTime = parseFloat(startTimeSlider.value);
        // Only seek if not already in clip range
        if (videoPlayer.currentTime < startTime || videoPlayer.currentTime > parseFloat(endTimeSlider.value)) {
          videoPlayer.currentTime = startTime;
        }
        videoPlayer.play();
      } else {
        videoPlayer.pause();
      }
    });

    // Restart Clip button
    restartClipBtn.addEventListener('click', () => {
      const startTime = parseFloat(startTimeSlider.value);
      videoPlayer.currentTime = startTime;
      videoPlayer.play();
    });

    // Update buttons when video play state changes
    videoPlayer.addEventListener('play', () => {
      updatePlayPauseButtons();
    });

    videoPlayer.addEventListener('pause', () => {
      updatePlayPauseButtons();
    });

    videoPlayer.addEventListener('ended', () => {
      updatePlayPauseButtons();
    });

    // Clip selection sliders
    function updateClipDisplay() {
      // Round to 3 decimal places to fix floating point precision issues
      let startTime = parseFloat(parseFloat(startTimeSlider.value).toFixed(3));
      let endTime = parseFloat(parseFloat(endTimeSlider.value).toFixed(3));

      // Ensure start is before end
      if (startTime >= endTime) {
        startTimeSlider.value = Math.max(0, endTime - 1);
      }

      const start = parseFloat(parseFloat(startTimeSlider.value).toFixed(3));
      const end = parseFloat(parseFloat(endTimeSlider.value).toFixed(3));

      startTimeDisplay.textContent = formatTimePrecise(start);
      endTimeDisplay.textContent = formatTimePrecise(end);
      clipDuration.textContent = formatTimePrecise(end - start);

      // Update fine-tune controls
      startFrameNum.textContent = getFrameNumber(start);
      endFrameNum.textContent = getFrameNumber(end);

      // Update visual range highlight
      if (videoDurationSeconds > 0) {
        const startPercent = (start / videoDurationSeconds) * 100;
        const endPercent = (end / videoDurationSeconds) * 100;
        rangeHighlight.style.left = `${startPercent}%`;
        rangeHighlight.style.width = `${endPercent - startPercent}%`;
      }
    }

    // Start time slider - update video immediately with 0.5s snapping
    startTimeSlider.addEventListener('input', () => {
      // Snap to nearest 0.5 seconds and fix floating point precision
      let value = parseFloat(startTimeSlider.value);
      value = parseFloat((Math.round(value * 2) / 2).toFixed(1)); // Round to nearest 0.5
      startTimeSlider.value = value;

      updateClipDisplay();
      videoPlayer.currentTime = value;
    });

    // End time slider - show notification
    endTimeSlider.addEventListener('mousedown', () => {
      let endTime = parseFloat(endTimeSlider.value);
      // If at max, use exact video duration
      if (endTime >= videoDurationSeconds - 0.25) {
        endTime = videoDurationSeconds;
      }
      showEndTimeNotification(endTime);
    });

    endTimeSlider.addEventListener('input', () => {
      let endTime = parseFloat(endTimeSlider.value);

      // If at or near max, snap to exact video duration
      if (endTime >= videoDurationSeconds - 0.25) {
        endTimeSlider.value = videoDurationSeconds;
      } else {
        // Otherwise, snap to nearest 0.5 seconds and fix floating point precision
        endTime = parseFloat((Math.round(endTime * 2) / 2).toFixed(1));
        endTimeSlider.value = endTime;
      }

      updateClipDisplay();
      endTime = parseFloat(endTimeSlider.value);
      // Update notification and reset auto-dismiss timer
      showEndTimeNotification(endTime);
    });

    // Done editing end time button
    doneEditingEndTime.addEventListener('click', () => {
      hideEndTimeNotification();
    });

    // Video info modal
    videoInfoBtn.addEventListener('click', () => {
      showVideoInfo();
    });

    closeVideoInfoModal.addEventListener('click', () => {
      videoInfoModal.classList.add('hidden');
    });

    // Close modal when clicking outside
    videoInfoModal.addEventListener('click', (e) => {
      if (e.target === videoInfoModal) {
        videoInfoModal.classList.add('hidden');
      }
    });

    // Close modal with Escape key
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && !videoInfoModal.classList.contains('hidden')) {
        videoInfoModal.classList.add('hidden');
      }
    });

    // PDF Export button
    exportPdfBtn.addEventListener('click', () => {
      generatePDF();
    });

    // Fine-tune button clicks
    fineTuneBtns.forEach(btn => {
      btn.addEventListener('click', () => {
        const action = btn.dataset.action; // 'start' or 'end'
        const delta = parseFloat(btn.dataset.delta);

        if (action === 'start') {
          let newValue = parseFloat(startTimeSlider.value) + delta;

          // Snap to appropriate increment based on delta and fix floating point precision
          const absDelta = Math.abs(delta);
          if (absDelta === 0.5) {
            // Snap to nearest 0.5 seconds
            newValue = parseFloat((Math.round(newValue * 2) / 2).toFixed(1));
          } else if (absDelta === 0.1) {
            // Snap to nearest 0.1 seconds
            newValue = parseFloat((Math.round(newValue * 10) / 10).toFixed(1));
          } else {
            // Frame adjustments - round to 3 decimal places
            newValue = parseFloat(newValue.toFixed(3));
          }

          newValue = Math.max(0, Math.min(newValue, videoDurationSeconds));
          startTimeSlider.value = newValue;
          // Seek video to show the starting frame
          videoPlayer.currentTime = newValue;
        } else {
          let newValue = parseFloat(endTimeSlider.value) + delta;

          // Snap to appropriate increment based on delta and fix floating point precision
          const absDelta = Math.abs(delta);
          if (absDelta === 0.5) {
            // Snap to nearest 0.5 seconds
            newValue = parseFloat((Math.round(newValue * 2) / 2).toFixed(1));
          } else if (absDelta === 0.1) {
            // Snap to nearest 0.1 seconds
            newValue = parseFloat((Math.round(newValue * 10) / 10).toFixed(1));
          } else {
            // Frame adjustments - round to 3 decimal places
            newValue = parseFloat(newValue.toFixed(3));
          }

          newValue = Math.max(0, Math.min(newValue, videoDurationSeconds));
          endTimeSlider.value = newValue;

          // Show notification and reset auto-dismiss timer
          showEndTimeNotification(newValue);
        }

        updateClipDisplay();
      });
    });

  </script>
