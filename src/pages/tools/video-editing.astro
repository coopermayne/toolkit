    // PDF Export Functions

    // Capture a single frame from the video at a specific time
    async function captureFrame(time) {
      return new Promise((resolve, reject) => {
        // Use the main video player directly instead of creating a new element
        const originalTime = videoPlayer.currentTime;

        const onSeeked = () => {
          try {
            const canvas = document.createElement('canvas');
            canvas.width = videoPlayer.videoWidth;
            canvas.height = videoPlayer.videoHeight;
            const ctx = canvas.getContext('2d');

            // Draw video frame
            ctx.drawImage(videoPlayer, 0, 0);

            // Add timestamp overlay if enabled
            if (includeTimestamps.checked) {
              const timestamp = formatTimePrecise(time);
              const fontSize = Math.max(24, Math.floor(canvas.height / 30));
              ctx.font = `bold ${fontSize}px Arial`;
              ctx.textBaseline = 'top';

              // Add background for better readability
              const textMetrics = ctx.measureText(timestamp);
              const padding = 10;
              const bgX = 10;
              const bgY = 10;
              const bgWidth = textMetrics.width + padding * 2;
              const bgHeight = fontSize + padding * 2;

              ctx.fillStyle = 'rgba(0, 0, 0, 0.7)';
              ctx.fillRect(bgX, bgY, bgWidth, bgHeight);

              // Draw timestamp text
              ctx.fillStyle = 'white';
              ctx.strokeStyle = 'black';
              ctx.lineWidth = 2;
              ctx.strokeText(timestamp, bgX + padding, bgY + padding);
              ctx.fillText(timestamp, bgX + padding, bgY + padding);
            }

            // Clean up event listener
            videoPlayer.removeEventListener('seeked', onSeeked);

            resolve(canvas);
          } catch (error) {
            videoPlayer.removeEventListener('seeked', onSeeked);
            reject(error);
          }
        };

        videoPlayer.addEventListener('seeked', onSeeked);
        videoPlayer.currentTime = time;
      });
    }

    // Generate PDF with video frames
    async function generatePDF() {
      if (!videoFile || videoDurationSeconds === 0) {
        alert('Please load a video first');
        return;
      }

      // Disable button and show progress
      exportPdfBtn.disabled = true;
      const originalText = exportPdfBtn.textContent;
      exportPdfBtn.textContent = 'Preparing...';

      try {
        // Import jsPDF dynamically
        const { jsPDF } = await import('jspdf');

        // Get user settings
        const fps = parseInt(fpsSelect.value);
        const startTime = parseFloat(startTimeSlider.value);
        const endTime = parseFloat(endTimeSlider.value);
        const duration = endTime - startTime;

        // Calculate number of frames
        const frameInterval = 1 / fps;
        const totalFrames = Math.ceil(duration * fps);

        // Estimate PDF size
        const estimatedSizeMB = (totalFrames * 100) / 1024; // Rough estimate: 100KB per frame
        if (estimatedSizeMB > 50 && !confirm(`This will generate approximately ${totalFrames} frames (${estimatedSizeMB.toFixed(1)}MB PDF). Continue?`)) {
          exportPdfBtn.disabled = false;
          exportPdfBtn.textContent = originalText;
          return;
        }

        exportPdfBtn.textContent = 'Extracting frames...';

        // Capture frames
        const frames = [];
        for (let i = 0; i < totalFrames; i++) {
          const time = startTime + (i * frameInterval);
          if (time > endTime) break;

          exportPdfBtn.textContent = `Extracting frame ${i + 1} of ${totalFrames}...`;
          const canvas = await captureFrame(time);

          frames.push({
            canvas,
            time,
            frameNumber: getFrameNumber(time)
          });
        }

        exportPdfBtn.textContent = 'Generating PDF...';

        // Create PDF
        const pdf = new jsPDF({
          orientation: 'landscape',
          unit: 'mm',
          format: 'a4'
        });

        // Add metadata page
        pdf.setFontSize(20);
        pdf.text('Video Analysis Report', 148, 20, { align: 'center' });

        pdf.setFontSize(12);
        pdf.text(`File: ${videoFile.name}`, 20, 40);
        pdf.text(`Duration: ${formatTimePrecise(videoDurationSeconds)}`, 20, 50);
        pdf.text(`Resolution: ${videoPlayer.videoWidth} × ${videoPlayer.videoHeight}`, 20, 60);
        pdf.text(`Clip Range: ${formatTimePrecise(startTime)} - ${formatTimePrecise(endTime)}`, 20, 70);
        pdf.text(`Clip Duration: ${formatTimePrecise(duration)}`, 20, 80);
        pdf.text(`Source Video Frame Rate: ${detectedFPS} fps${isFPSDetected ? '' : ' (estimated)'}`, 20, 90);
        pdf.text(`Export Sampling Rate: ${fps} fps`, 20, 100);
        pdf.text(`Frames in Export: ${totalFrames}`, 20, 110);
        pdf.text(`Export Date: ${new Date().toLocaleString()}`, 20, 120);

        // Add frames
        for (let i = 0; i < frames.length; i++) {
          const frame = frames[i];

          exportPdfBtn.textContent = `Adding frame ${i + 1} of ${frames.length} to PDF...`;

          pdf.addPage();

          // Add frame image
          const imgData = frame.canvas.toDataURL('image/jpeg', 0.85);
          const aspectRatio = frame.canvas.width / frame.canvas.height;

          // Calculate dimensions to fit on page (A4 landscape: 297mm x 210mm)
          const maxWidth = 260;
          const maxHeight = 160;
          let imgWidth = maxWidth;
          let imgHeight = imgWidth / aspectRatio;

          if (imgHeight > maxHeight) {
            imgHeight = maxHeight;
            imgWidth = imgHeight * aspectRatio;
          }

          const x = (297 - imgWidth) / 2;
          const y = 20;

          pdf.addImage(imgData, 'JPEG', x, y, imgWidth, imgHeight);

          // Add frame info below image
          pdf.setFontSize(10);
          const infoY = y + imgHeight + 10;
          pdf.text(`Timestamp: ${formatTimePrecise(frame.time)}`, 20, infoY);

          if (includeFrameNumbers.checked) {
            pdf.text(`Frame #: ${frame.frameNumber}`, 20, infoY + 7);
          }

          // Add page number
          pdf.text(`Page ${i + 2} of ${frames.length + 1}`, 277, 200, { align: 'right' });
        }

        // Add page numbers to metadata page
        pdf.setPage(1);
        pdf.setFontSize(10);
        pdf.text('Page 1 of ' + (frames.length + 1), 277, 200, { align: 'right' });

        // Save PDF
        const fileName = videoFile.name.replace(/\.[^/.]+$/, '') + '_analysis.pdf';
        pdf.save(fileName);

        exportPdfBtn.textContent = 'PDF Generated!';
        setTimeout(() => {
          exportPdfBtn.textContent = originalText;
          exportPdfBtn.disabled = false;
        }, 2000);

      } catch (error) {
        console.error('PDF generation error:', error);
        alert('Error generating PDF: ' + error.message);
        exportPdfBtn.textContent = originalText;
        exportPdfBtn.disabled = false;
      }
    }

