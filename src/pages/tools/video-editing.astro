    // Detect video frame rate using requestVideoFrameCallback API
    async function detectFPSWithCallback(video) {
      return new Promise((resolve, reject) => {
        let frameCount = 0;
        let startTime = null;
        const targetSamples = 60; // Sample 60 frames for accuracy

        function frameCallback(now, metadata) {
          if (!startTime) {
            startTime = metadata.mediaTime;
          }

          frameCount++;
          const elapsed = metadata.mediaTime - startTime;

          // Collect enough samples (at least 1 second of video)
          if (frameCount >= targetSamples && elapsed >= 1.0) {
            const fps = frameCount / elapsed;
            resolve(Math.round(fps));
          } else if (frameCount < 120) { // Safety limit
            video.requestVideoFrameCallback(frameCallback);
          } else {
            // Fallback if we hit limit
            const fps = frameCount / elapsed;
            resolve(Math.round(fps));
          }
        }

        if ('requestVideoFrameCallback' in HTMLVideoElement.prototype) {
          video.requestVideoFrameCallback(frameCallback);
        } else {
          reject(new Error('requestVideoFrameCallback not supported'));
        }
      });
    }

    // Fallback FPS detection using getVideoPlaybackQuality
    async function detectFPSWithQuality(video) {
      return new Promise((resolve) => {
        const quality1 = video.getVideoPlaybackQuality();
        const time1 = performance.now();

        setTimeout(() => {
          const quality2 = video.getVideoPlaybackQuality();
          const time2 = performance.now();

          const frames = quality2.totalVideoFrames - quality1.totalVideoFrames;
          const elapsed = (time2 - time1) / 1000;
          const fps = frames / elapsed;

          resolve(Math.round(fps));
        }, 1500); // Sample for 1.5 seconds
      });
    }

    // Main FPS detection function with fallback
    async function detectVideoFPS(video) {
      try {
        // Store original state
        const wasPlaying = !video.paused;
        const originalTime = video.currentTime;

        // Need to play video to detect FPS
        video.currentTime = Math.min(2, video.duration / 2); // Start from 2s or middle
        await video.play();

        let fps;
        if ('requestVideoFrameCallback' in HTMLVideoElement.prototype) {
          fps = await detectFPSWithCallback(video);
        } else {
          fps = await detectFPSWithQuality(video);
        }

        // Restore original state
        video.pause();
        video.currentTime = originalTime;
        if (wasPlaying) {
          video.play();
        }

        return fps;
      } catch (error) {
        console.warn('FPS detection failed:', error);
        return 30; // Default fallback
      }
    }

    // Update all FPS-dependent UI elements
    function updateFPSDependentUI() {
